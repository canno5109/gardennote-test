<Alloy>
  <Tab title="記録設定" icon="/icons/cogs.png">
    <NavigationWindow id="recordPropertiesNav">
      <Window onOpen="updateRecordProperties" onFocus="updateRecordProperties">
        <View class="body">
          <View class="navBar">
            <View class="navItems">
              <Label class="navTitle">記録設定</Label>
            </View>
          </View>
          <View class="container">
            <ListView id="recordPropertiesListView" defaultItemTemplate="recordPropertiesTemplate" onItemclick="onItemClick">
              <Templates>
                <ItemTemplate name="recordPropertiesTemplate" class="recordPropertiesTemplate">
                  <View class="itemContainer">
                    <View class="iconContainer">
                      <Label bindId="icon" class="icon" />
                    </View>
                    <View class="messageContainer">
                      <Label bindId="name" class="name" />
                    </View>
                  </View>
                </ItemTemplate>
                <ItemTemplate name="header" class="headerTemplate">
                  <View class="headerContainer">
                    <Label bindId="header" class="headerTitle" />
                  </View>
                </ItemTemplate>
              </Templates>
              <ListSection id="photoListSection">
                <ListItem template="header" header:text="テーマ" />
                <ListItem template="recordPropertiesTemplate" itemId="theme"
                  height="80"
                  icon:text="\uf005"
                  icon:color="#ffd700"
                  name:text=""
                  name:color="#464646" />

                <ListItem template="header" header:text="みどりボックス" />
                <ListItem template="recordPropertiesTemplate" itemId="midori"
                  icon:text="\uf187"
                  icon:color="#BFBFBF"
                  name:text="農地カメラ"
                  name:color="#464646" />

                <ListItem template="header" header:text="お問い合わせ" />
                <ListItem template="recordPropertiesTemplate" itemId="mail"
                  icon:text="\uf0e0"
                  icon:color="#6699ff"
                  name:text="メールで連絡"
                  name:color="#464646" />
              </ListSection>
            </ListView>
          </View>
        </View>
      </Window>
    </NavigationWindow>
  </Tab>
</Alloy>
