<Alloy>
  <Window onClose="cleanup" onClick="hideKeyboard">
    <View class="body">
      <View class="navBar">
        <View class="navItems">
          <Button class="backBtn" onSingletap="closeWin" />
          <Label class="navTitle">作物編集</Label>
          <Button class="deleteBtn" onSingletap="deleteCrop" />
        </View>
      </View>
      <View class="container">
        <View class="inputContainer">
          <View class="inputFieldContainer">
            <TextField id="nameField" class="inputField" hintText="作物名を入力" onClick="setKeyboardOwner" />
          </View>
          <Button id="updateBtn" onSingletap="update">作物を更新</Button>
          <Button id="selectCropBtn" onSingletap="selectCrop">この作物を選択する</Button>
        </View>
      </View>
    </View>

    <AlertDialog id="errorDialog" title="お知らせ" message="名前を入力してください">
    </AlertDialog>

    <OptionDialog id="confirmDialog" onClick="confirmDeleteCrop" title="作物を削除しますか？" cancel="1">
      <Options>
        <Option>削除</Option>
        <Option>キャンセル</Option>
      </Options>
    </OptionDialog>
  </Window>
</Alloy>
