<Alloy>
  <Collection src="photoRecord" instance="true" />
  <Window id="cameraWin" onOpen="showCamera" onClose="cleanup">
    <View id="editPicture">
      <ImageView id="photo" />
      <View class="edit">
        <View id="closeView" class="editBtn">
          <View class="centerView">
            <Button class="eventButton" onSingletap="hideEditPicture" title="再撮影" backgroundColor="#990000" />
          </View>
        </View>

        <View id="saveView" class="editBtn">
          <View class="centerView">
            <Button id="saveBtn" class="eventButton" onSingletap="savePhoto" title="記録" backgroundColor="#009999" />
          </View>
        </View>
      </View>
    </View>
  </Window>

  <View id="cameraContainer">
    <View class="topBackground">
    </View>
    <View class="displayCotnainer">
    </View>
    <View class="option">
      <Button class="modeButton" onSingletap="closeCamera" />
      <Button class="cameraBtn" onSingletap="takePicture" />
    </View>
  </View>
</Alloy>
