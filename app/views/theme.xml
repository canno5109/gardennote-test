<Alloy>
  <Window>
    <View class="body">
      <View class="navBar">
        <View class="navItems">
          <Button class="backBtn" onSingletap="closeWin" />
          <Label class="navTitle">テーマ</Label>
        </View>
      </View>
      <View class="container">
        <View class="center">
          <Label id="advice">作物観察記録を利用する目的やテーマを入力してください</Label>
          <View class="areaContainer">
            <TextArea id="themeArea" class="inputArea" onClick="setKeyboardOwner" />
          </View>

          <Button class="updateThemeBtn" onSingletap="updateTheme">テーマを更新</Button>
        </View>
      </View>
    </View>
  </Window>
</Alloy>
